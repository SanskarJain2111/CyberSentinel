        }

        .news-card:hover .read-more {
          color: #ffffff; /* Change to white on hovering the card */
        }

        .read-more:hover {
          text-decoration: underline;
        }

        /* "Show More" button styling */
        #show-more {
          display: block;
          width: 200px;
          margin: 20px auto;
          padding: 10px;
          background-color: #333;
          color: #fff;
          font-size: 1em;
          border: none;
          border-radius: 5px;
          cursor: pointer;
          transition: background-color 0.3s ease;
        }

        #show-more:hover {
          background-color: #555;
        }
    </style>
</head>
<body>
    <section class="attack"><%- include('header') %></section>
    <h1>Latest News</h1>
    <div id="news-container"></div>
    <button id="show-more">Show More</button>

    <script>
        const news = <%- JSON.stringify(news) %>; // Embed your news data from the server
        const newsContainer = document.getElementById('news-container');
        const showMoreButton = document.getElementById('show-more');
        let currentIndex = 0;
        const itemsPerLoad = 7; // Number of news items to show initially and load on each click

        // Function to load and display news items
        function loadNewsItems() {
        const nextIndex = Math.min(currentIndex + itemsPerLoad, news.length);
        for (let i = currentIndex; i < nextIndex; i++) {
            const item = news[i];
            const newsCard = document.createElement('div');
            newsCard.classList.add('news-card');
            newsCard.innerHTML = `
            <h2><a href="${item.url}" target="_blank">${item.title}</a></h2>
            <p>${item.description}</p>
            <div class="news-footer">
                <span>Published: ${item.publishedAt}</span>
                <a class="read-more" href="${item.url}" target="_blank">Read more</a>
            </div>
            `;
            newsContainer.appendChild(newsCard);
        }
        currentIndex = nextIndex;

        // Hide the button if all news items are displayed
        if (currentIndex >= news.length) {
            showMoreButton.style.display = 'none';
        }
        }

        // Initial load
        loadNewsItems();

        // Add event listener to "Show More" button
        showMoreButton.addEventListener('click', loadNewsItems);
    </script>
</body>
</html>
