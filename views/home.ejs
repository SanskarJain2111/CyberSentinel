    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // List of pages and keywords
            const pages = {
                "home": ["/index.html", ["home", "main page", "start"]],
                "about": ["/about.html", ["about", "about us", "who we are"]],
                "services": ["/services.html", ["services", "what we offer", "products"]],
                "contact": ["/contact.html", ["contact", "reach us", "contact page"]],
                "cybersecurity": ["/cybersecurity.html", ["cybersecurity", "security", "data protection"]],
                "phishing": ["/phishingInfo", ["phishing", "email security", "phishing awareness"]],
                "awareness": ["/awareness.html", ["awareness", "education", "training"]]
            };
    
            // Handle search form submission
            document.getElementById('searchForm').addEventListener('submit', function(event) {
                event.preventDefault();  // Prevent form from submitting
    
                const query = document.querySelector('input[name="query"]').value.toLowerCase().trim();
                let found = false;
    
                // Iterate through the pages to find a match
                for (let page in pages) {
                    if (pages[page][1].some(keyword => query.includes(keyword))) {
                        window.location.href = pages[page][0];  // Redirect if a keyword matches
                        found = true;
                        break;
                    }
                }
    
                // If no match found, show an alert
                if (!found) {
                    alert('No results found.');
                }
            });
        });
    </script>
        

